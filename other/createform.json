{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": true,
  "properties": {
    "title": {
      "title": "Project Title",
      "type": "string",
      "required": true
    },
    "profile": {
      "type": "object",
      "required": true,
      "properties": {
        "Primary-Investigator": {
          "title": "Primary Investigator",
          "type": "object",
          "required": true,
          "properties": {
            "Name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "Rank": {
              "title": "Rank",
              "type": "string",
              "required": true
            },
            "Department": {
              "title": "Department",
              "type": "string",
              "required": true
            }
          }
        },
        "Co-Investigators": {
          "title": "Co-Investigators",
          "type": "array",
          "required": true,
          "items": {
            "type": "object",
            "required": true,
            "properties": {
              "Name": {
                "title": "Name",
                "type": "string",
                "required": true
              },
              "Rank": {
                "title": "Rank",
                "type": "string",
                "required": true
              },
              "Department": {
                "title": "Department",
                "type": "string",
                "required": true
              }
            }
          }
        },
        "Focus": {
          "type": "string",
          "required": true,
          "enum": ["Cognition","Complexity","Information"]
        },
        "contant": {
          "type": "object",
          "required": true,
          "properties": {
            "name": {
              "type": "string",
              "required": true
            },
            "phone": {
              "type": "string",
              "required": true
            },
            "email": {
              "type": "string",
              "required": true
            }
          }
        },
        "amount": {
          "type": "integer",
          "required": true
        }
      }
    }
  }
}